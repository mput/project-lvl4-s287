extends /layouts/application.pug

block content
  .row.justify-content-center
    .mx-auto.col-sm-6
      .shadow-sm.p-3.mb-5.bg-white.rounded
        .card
          .card-header
            h4.mb-0 Create task
          .card-body
            +formFor(f, { url: urlFor('tasks'), method: 'post' })
              +input(f, 'name')
              +textarea(f, 'description')
              +select(f, 'StatusId', statuses, { label: 'Status' })
              +select(f, 'AssignedToId', users.map(({ id, fullName }) => ({ id, name: fullName })), { label: 'Assigned To' })
              +button(f, 'Create')
