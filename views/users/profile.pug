extends /layouts/application.pug

block content
  .row.justify-content-center
    .mx-auto.col-sm-6
      .shadow-sm.p-3.mb-5.bg-white.rounded
        .card
          .card-header
            h4.mb-0 Edit your profile
          .card-body
            +formFor(f, { url: urlFor('user'), method: 'patch' })
              +input(f, 'email')
              +input(f, 'firstName', { label: 'First name' })
              +input(f, 'lastName', { label: 'Last name' })
              +button(f, 'Save')
