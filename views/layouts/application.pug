include /mixins/forms.pug

doctype html
html(lang="en")
  head
    meta(charset = 'utf-8')
    meta(name='viewport', content="width=device-width, initial-scale=1, shrink-to-fit=no")
    script(src='/assets/main.js')
    title Proj-track
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a.navbar-brand(href='/') Proj-track
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarSupportedContent
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href=urlFor('users')) Users
        ul.navbar-nav
          if isSignedIn()
            li.nav-item
              a.nav-link(href=urlFor('session') data-method='delete' rel='nofollow') Sign Out
          else
            li.nav-item
              a.nav-link(href=urlFor('newSession')) Sign In
            li.nav-item
              a.nav-link(href=urlFor('newUser')) Sign Up

    main.container
      - const msg = flash.get()
      if msg
        .alert.alert-info.m-3= msg
      block content
