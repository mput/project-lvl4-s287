include /mixins/forms.pug

doctype html
html(lang="en")
  head
    meta(charset = 'utf-8')
    meta(name='viewport', content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel='stylesheet' href='/assets/style.css')
    title Tasker Plan
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-info
      a.navbar-brand(href='/') Tasker Plan
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarSupportedContent
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href=urlFor('users')) Users
        ul.navbar-nav
          if isSignedIn()
            li.nav-item.dropdown.active
              a.nav-link.dropdown-toggle.navbarDropdownMenuLink(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")  user@mail.com
              .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdown')
                a.dropdown-item(href='#') My account
                a.dropdown-item(href=urlFor('session') data-method='delete' rel='nofollow') Sign Out
          else
            li.nav-item
              a.nav-link(href=urlFor('newSession')) Sign In
            li.nav-item
              a.nav-link(href=urlFor('newUser')) Sign Up

    main.container-fluid
      - const msg = flash.get()
      if msg
        .alert.alert-info.m-3= msg
      .row
        block sidebar
        block content
  script(src='/assets/app.js')
